<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.ProductDetailActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="156dp"
        android:layout_height="114dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/icone_aliment" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Nom du produit "
        android:textColor="@color/darker_3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Voici tout ce qui est bon pour toi "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

            <Space
                android:layout_width="22dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Mais il y a quand quelques points nÃ©gatifs... "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/products_recycler_view"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="gone"
            app:backgroundTint="#DEB887"
            app:srcCompat="@drawable/ic_search_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="gone"
            app:backgroundTint="#AE8964"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_action_name"
            app:backgroundTint="#A0522D" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnconsume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_add_shopping_cart_black_24dp"
            android:visibility="visible"
            app:backgroundTint="#B36700" />
    </LinearLayout>

    <LinearLayout
android:id="@+id/linearLayout"
android:layout_width="match_parent"
android:layout_height="73dp"
android:layout_gravity="center"
android:background="#F0CDB3"
android:orientation="horizontal">

<ImageView
    android:id="@+id/btnRecipes"
    android:layout_width="13dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:srcCompat="@drawable/ic_restaurant_black_24dp"
    tools:ignore="VectorDrawableCompat" />

<ImageView
    android:id="@+id/btnProduct"
    android:layout_width="24dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:srcCompat="@drawable/ic_shopping_cart_black_24dp"
    tools:ignore="VectorDrawableCompat" />

<ImageView
    android:id="@+id/btnFrigo"
    android:layout_width="4dp"

    android:layout_height="match_parent"
    android:layout_weight="1"
    app:srcCompat="@drawable/ic_kitchen_black_24dp"
    tools:ignore="VectorDrawableCompat" />

<ImageView
    android:id="@+id/btnProfil"
    android:layout_width="14dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:srcCompat="@drawable/ic_person_black_24dp"
    tools:ignore="VectorDrawableCompat" />

</LinearLayout>



</LinearLayout>
