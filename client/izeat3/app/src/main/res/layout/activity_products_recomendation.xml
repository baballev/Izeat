<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent">


    <ImageView
    android:id="@+id/imageView3"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="top"
    android:layout_margin="10dp"

    app:srcCompat="@drawable/logo_petit" />

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Voici ce que contient votre frigo"
    android:textColor="#4CAF50"
    android:textSize="24sp"
    android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="411dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintTop_toTopOf="@id/linearLayout">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_action_name"
            app:backgroundTint="#E91E63" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnconsume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_add_shopping_cart_black_24dp"
            android:visibility="visible"
            app:backgroundTint="#4CAF50" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFFEFE"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnRecipes"
        android:layout_width="13dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/icone_recette" />

    <ImageView
        android:id="@+id/btnProduct"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/icone_aliment" />

    <ImageView
        android:id="@+id/btnFrigo"
        android:layout_width="4dp"

        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/icone_frigo" />

    <ImageView
        android:id="@+id/btnProfil"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_person_black_24dp"
        tools:ignore="VectorDrawableCompat" />

</LinearLayout>

</LinearLayout>